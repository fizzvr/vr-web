---
css : "cvr/cssvr.css"
js : "jvr/vrweb.js"
---
<!DOCTYPE html>
<html lang="es" class="no-js">
<head>
	<!-- meta estandar -->
	<meta charset="UTF-8">
	<meta name="viewport" content="width=device-width, initial-scale=1" >
	<!-- propiedades del sitio -->
	<title><%= @obtenerTitulo() %></title>
	<meta name="description" content="<%= @obtenerDescripcion() %>" >
	<meta name="keywords" content="<%= @obtenerPalabrasClave() %>" >
	<meta name="author" content="<%= @obtenerAutor() %>" >
	<link rel="shortcut icon" href="favicon.ico">
	<link rel="apple-touch-icon-precomposed" href="apple-touch-icon-precomposed.png">


	<!-- HTML5 shim and Respond.js IE8 support of HTML5 elements and media queries -->
    <!--[if lt IE 9]>
      <script src="https://oss.maxcdn.com/libs/html5shiv/3.7.0/html5shiv.js"></script>
      <script src="https://oss.maxcdn.com/libs/respond.js/1.3.0/respond.min.js"></script>
    <![endif]-->

	<!-- recursos -->
	<!-- <link href='http://fonts.googleapis.com/css?family=Open+Sans:400italic,400,700' rel='stylesheet' type='text/css'> -->

	<link rel="stylesheet" href="bs3/css/bootstrap.min.css">
	<link rel="stylesheet" href="fs/flexslider.css">
	<% for url in @assets('css'): %>
	<link rel="stylesheet" href="<%= url %>">
	<% end %>
	<!--core JavaScript -->
	<script src="jvr/act/jquery.min.js"></script>
	<script src="bs3/js/bootstrap.min.js"></script>


</head>
<body>
	<div class="color-bar-1"></div>
	<div class="color-bar-2 color-bg"></div>
	<header class="navbar navbar-default navbar-static-top">
	<div class="container">
		<div class="row">
			<div class="col-md-3 vr-web-logo">
				<div class="navbar-header">
					<button type="button" class="navbar-toggle" data-toggle="collapse" data-target="#colapsar-menu">
						<span class="sr-only">Menú</span>
						<span class="glyphicon glyphicon-arrow-down"></span>
					</button>
					<a href="index.html" class="navbar-brand" title="fizzvr"><img src="ivr/logo.png" alt="fizzvr logo"></a>
				</div>
			</div>
			<div class="col-md-9">
				<div class="vr-web-social">
					<ul>
						<li><a href="{}" class="github">Github</a></li>
						<li><a href="{}" class="google">Google</a></li>
						<li><a href="{}" class="twitter">Twitter</a></li>
						<li><a href="{}" class="youtube">Youtube</a></li>
						<li><a href="{}" class="rss">Rss</a></li>
					</ul>
				</div>
				<nav class="collapse navbar-collapse vr-web-navegacion navbar-right" id="colapsar-menu" role="navigation">
					<ul class="nav navbar-nav">
						<li class="active"><a href="index.html">INICIO</a></li>
						<li><a href="{}">PERFIL</a></li>
						<li><a href="{}">PROYECTOS</a></li>
						<li><a href="{}">BLOG</a></li>
						<li><a href="{}">CONTÁCTAME</a></li>
					</ul>
				</nav>
			</div>
		</div>
	</div>
	</header>
	<%- @content %>
	<footer class="footer-container">
		<div class="container">
			<div class="row footer-row">
				<div class="col-md-4 footer-col">
					<h5>Información</h5>
					<!-- TODO: falta poner logo footer -->
					<img src="ivr/logo.png" alt="logo-footer">
					<ul class="contact">
						<li>
							<h3>Contacto</h3>
							<address>
							<strong>Vladimir Rodríguez</strong><br> Ciudad mitad del mundo<br>Latitud 0°0"0'<br>	Quito - Ecuador
							</address>
							<ul class="social-icons">
		                        <li><a href="#" class="social-icon github"></a></li>
		                        <li><a href="#" class="social-icon twitter"></a></li>
		                        <li><a href="#" class="social-icon google"></a></li>
		                        <li><a href="#" class="social-icon youtube"></a></li>
		                        <li><a href="#" class="social-icon rss"></a></li>
                    		</ul>
						</li>
						<li>
							<h3>Email</h3>
							<p><a href="{}">fizzvr@gmail.com</a></p>
						</li>
						<li>
							<h3>Celular</h3>
							<p>+(593) 983288589</p>
						</li>
					</ul>


				</div>
				<div class="col-md-4 footer-col">
					<h5>Déjame un Mensaje</h5>
					<form action="#" method="post">
                        <input type="text" name="name" id="name" value="Nombre" onFocus="if (this.value == 'Nombre') this.value = '';" onBlur="if (this.value == '') this.value = 'Nombre';" />
                        <input type="text" name="email" id="email" value="Email" onFocus="if (this.value == 'Email') this.value = '';" onBlur="if (this.value == '') this.value = 'Email';" />
                        <textarea name="message" id="message" onFocus="if (this.value == 'Mensaje') this.value = '';" onBlur="if (this.value == '') this.value = 'Mensaje';" >Mensaje</textarea>
                        <input type="submit" class="btn send_btn" value="Enviar!" />
                    </form>
				</div>
				<!-- <div class="col-md-4 footer-col">
					<h5>Últimos Tweets</h5>
					<a class="twitter-timeline" data-dnt="true" href="https://twitter.com/fizzvr" data-widget-id="416249894416834560">Tweets por @fizzvr</a>
					<script>!function(d,s,id){var js,fjs=d.getElementsByTagName(s)[0],p=/^http:/.test(d.location)?'http':'https';if(!d.getElementById(id)){js=d.createElement(s);js.id=id;js.src=p+"://platform.twitter.com/widgets.js";fjs.parentNode.insertBefore(js,fjs);}}(document,"script","twitter-wjs");
					</script>
				</div> -->
			</div>
			<div class="row footer-col footer-sub">
				<div class="col-md-12">
					<a href="#">INICIO</a>&nbsp;&nbsp;&nbsp;|&nbsp;&nbsp;&nbsp;<a href="#">PERFIL</a>&nbsp;&nbsp;&nbsp;|&nbsp;&nbsp;&nbsp;<a href="#">PROYECTOS</a>&nbsp;&nbsp;&nbsp;|&nbsp;&nbsp;&nbsp;<a href="#">BLOG</a>&nbsp;&nbsp;&nbsp;|&nbsp;&nbsp;&nbsp;<a href="#">CONTÁCTAME</a>
					<div class="row">
						<div class="col-md-6">
							<span class="pull-left">&copy; <%- (new Date()).getFullYear() %> Vladimir Rodríguez - Programador Web <a rel="license" href="http://creativecommons.org/licenses/by/3.0/ec/"><!-- <img alt="Licencia Creative Commons" style="border-width:0" src="http://i.creativecommons.org/l/by/3.0/ec/80x15.png" /> --></a>
							</span>
						</div>
						<div class="col-md-6">
							<span class="pull-right">
								Última actualización el <%= @formatoFecha(@site.date) %>
							</span>
						</div>
					</div>
				</div>
			</div>
		</div>
	</footer>
	<script src="fs/jquery.flexslider.js" ></script>
	<% for url in @assets('js'): %>
	<script src="<%= url %>"></script>
	<% end %>
</body>
</html>
